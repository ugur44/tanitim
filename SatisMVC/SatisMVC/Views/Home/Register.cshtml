
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<body style="background: url(/Content/background4.jpg); background-size: cover;">
    <div style="width:50%;height:50%; margin-left:20%;margin-right:30%;font-style:oblique">
        <form action="/Home/Register" class="form-horizontal" method="post">
            <fieldset>
                <legend style="color:#fab206">Kullanıcı Kayıt Sayfası</legend>

                <div class="form-group">
                    <label for="name" class="col-lg-2 control-label">Kullanıcı Adı</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" name="nameCheck" placeholder="Adınızı Giriniz" required="required" oninvalid="this.setCustomValidity('Lütfen Adınızı Giriniz')" oninput="setCustomValidity('')">
                    </div>
                </div>
                <div class="form-group">
                    <label for="surname" class="col-lg-2 control-label">Kullanıcı Soyadı</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" name="surnameCheck" placeholder="Kullanıcı Soyadınızı Giriniz" required="required" oninvalid="this.setCustomValidity('Lütfen Soyadınızı Giriniz')" oninput="setCustomValidity('')">

                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        <input type="email" class="form-control" name="emailCheck" placeholder="Email" required="required" oninvalid="this.setCustomValidity('Hatalı Email Girdiniz')" oninput="setCustomValidity('')">
                    </div>
                </div>

                <div class="form-group">


                    <label for="inputPassword" class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" name="passwordCheck" placeholder="Password" required="required" oninvalid="this.setCustomValidity('Lütfen Şifrenizi Giriniz')" oninput="setCustomValidity('')">

                    </div>

                </div>
                <div class="form-group">


                    <label for="inputPassword" class="col-lg-2 control-label">Telefon Numarası</label>
                    <div class="col-lg-10">
                        <input type="number" class="form-control" name="tlfcheck" placeholder="Telefon" required="required" oninvalid="this.setCustomValidity('Lütfen Şifrenizi Giriniz')" oninput="setCustomValidity('')">

                    </div>

                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">

                        <a type="reset" href="/Home/Index" class="btn btn-info">Anasayfaya Dön</a>
                        <button type="submit" class="btn btn-info">Kayıt Ol</button>
                    </div>
                </div>

            </fieldset>
        </form>


    </div>  
</body>
</html>