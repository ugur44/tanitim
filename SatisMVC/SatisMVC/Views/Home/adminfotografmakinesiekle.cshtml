<script>
    function callCheck() {
        var checkedValue = null;
        var inputElements = document.getElementsByClassName('checkboxGet');
        for (var i = 0; inputElements[i]; ++i) {
            if (inputElements[i].checked) {
                checkedValue = inputElements[i].value;
                break;
            }
        }
        document.getElementById('hdVal').value = checkedValue;
        console.log(checkedValue);

    }



</script>




